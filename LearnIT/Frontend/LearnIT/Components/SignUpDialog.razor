@using MudBlazor;
@using Components;
@using System.Text.RegularExpressions
@using System.ComponentModel.DataAnnotations
@using DTOs;
@using Shared;
@inject IDialogService Dialog

<MudDialog>
    <DialogContent>
        <SignUpForm Genders="Genders" OnUserRegistrationCompleted="OnUserRegistrationCompleted" />
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter]
    public MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter]
    public IList<Gender> Genders { get; set; } = null!;

    private void OnUserRegistrationCompleted(AddUserModel user)
    {
        MudDialog.Close(DialogResult.Ok(user));
    }
}
